<div class='spec-user'>
    <div class= 'name-img'> 
         <img src=<%=@user.photo%> alt='Profile' class = 'cover-img'  />
        <div class='name' >
           <p> <%= @user.name %></h3></p>
           <p class='nmb-posts'>Number of posts: <%= @user.posts_counter %> </p>
        </div>
    </div>

    <div class= 'bio'>
        <p>Bio</p>
        <p><h3><%= @user.bio %></h3></p>
    </div>

    <ul class='posts'>
        <% @user.three_recent_posts.each do |item| %>
          <li class='post'>
            <p>Post #<%= item.id%></p>
            <p><%= item.title %></p>
            <p><%= item.text %></p>
            <p class='details'>
                <span>comments: <%= item.comments_counter %></span>, 
                <span>Likes: <%= item.likes_counter %> </span>
                <%=@post%>
            </p>
          </li>
        <% end %>
    </ul>
    <p class='new-post'> <%= link_to 'New post' , "/users/#{@user.id}/posts/new" %></p>
    <button class='btn'>
        <%= link_to 'See all posts' , "#{@user.id}/posts" %>
    </button>
</div>