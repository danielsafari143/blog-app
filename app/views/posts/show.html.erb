<div class= 'last-user'>
    <div class='post'>
            <p>Post #<%= @post.id%> By <%= @post.author.name %></p>
            <p>
                 <%= @post.title %>
            </p>
            <p><%= @post.text %></p>
            <p class='details'>
                <span>comments: <%= @post.comments_counter %></span>, 
                <span>Likes: <%= @post.likes_counter %> </span>
            </p>
    </div>

    <ul class='posts'>
          <div class='five-comments'>
            <% @comment.each do |item| %>
               <p>User : <%= item.author.name %></p>
               <p><%= item.text %></p>
             <% end %>
             <div class='cmt'>
                <P>
                  <%= link_to 'Add a comment' , "/users/#{@post.author.id}/posts/#{@post.id}/comments/new" %>
                </P>
                <P>
                  <%= link_to 'Like' , "/users/#{@post.author.id}/posts/#{@post.id}/likes/" %>
                </P>
            </div>
          </div>
    </ul>
</div>

